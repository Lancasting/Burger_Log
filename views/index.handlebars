<section class="row header">
  <h1>Burger Logger</h1>
</section>
<section class="row">
  <img class="col-sm-6 burger" src="/assets/img/Burger.jpg" alt="Burger image"/> 
</section>

<section class="row">
  <section class="col-sm-6">
    <h3 class="text-center">Uneaten</h3>
    <article>
      <ul class="uneaten">
        <li>
        {{#each burgers}}
        {{#unless this.devoured}}
        {{this.id}} {{this.burger_name}}
        <button class="change-devour" data-id={{id}}>DEVOUR!!!</button>
        {{/unless}}
        {{/each}}
        </li>
      </ul>
    </article>
  </section>
  <section class="col-sm-6">
    <h3 class="text center">Eaten</h3>
    <article>
      <ul class="devoured">
        <li>
        {{#each burgers}}
        {{#if this.devoured}}
        {{this.id}} {{this.burger_name}}
        <button class="delete-burger" data-id={{id}}>DELETE!!!</button>
        {{/if}}
        {{/each}}
        </li>
      </ul>
    </article>
  </section>
</section>

<h2>Create Burger</h2>
<form class="create-form1">
  <div class="form-group">
    <input id="burger" type="text"></input>
  </div>
  <button type="submit" class="create-form">Submit</button>
</form>